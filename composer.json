{
    "name": "regnerisch/sets",
    "description": "A simple map library",
    "type": "library",
    "license": "ISC",
    "authors": [
        {
            "name": "Jonas Regner",
            "email": "regnerjonas@pm.me"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Regnerisch\\Sets\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "regnerisch/php-cs-fixer-config": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "fix": "php-cs-fixer fix --allow-risky=yes",
        "tests": "vendor/bin/phpunit tests",
        "tests-coverage": "vendor/bin/phpunit --coverage-clover coverage.xml --whitelist src tests"
    }
}
